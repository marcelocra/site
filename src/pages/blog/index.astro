---
import { marked } from "marked";

import FormattedDate from "../../components/FormattedDate.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getPosts } from "../../lib/get-posts";
import clsx from "clsx";

const posts = await getPosts();
---

<BaseLayout>
  <section class="m-5">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-5">
      {
        posts.map((post) => (
          <blog-post-card data-slug={post.id}>
            <div
              class={clsx(
                "relative border border-slate-400 rounded-lg duration-300 hover:scale-[1.03] p-4 flex flex-col gap-3 cursor-pointer h-full",
                post.data.writing
                  ? "bg-gradient-to-br from-slate-100 to-slate-400"
                  : "bg-gradient-to-b from-[var(--bg-bege)] to-[var(--light-gray)] "
              )}
            >
              {post.data.draft && (
                <div class="absolute top-0 right-0 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded-bl-lg rounded-tr-md">
                  Draft
                </div>
              )}
              <FormattedDate
                class="italic text-slate-600 text-xs"
                date={post.data.pubDate}
              />
              <div class="font-bold">{post.data.title}</div>
              <div class="text-sm">
                <Fragment
                  set:html={marked.parseInline(post.data.description)}
                />
              </div>

              {/* Update this later, to place text over image.
              {post.data.heroImage ? (
                <div class="relative">
                  <div class="absolute left-1/2 transform -translate-x-1/2 top-1/2 -translate-y-1/2 bg-gray-300 p-10 rounded uppercase font-bold shadow-[0px_0px_10px_3px_rgba(0,0,0,1)]">
                    {post.data.title}
                  </div>
                  <img src={post.data.heroImage} class="rounded-lg" />
                </div>
              ) : (
                <div>{post.data.title}</div>
              )} */}
              {post.data.writing && (
                <div class="absolute bottom-0 left-0 right-0 text-xs bg-slate-200 border-t border-slate-400 p-2 justify-center rounded-b-lg flex flex-grow items-center drop-shadow-lg tracking-widest uppercase font-black">
                  <sup>*</sup>&nbsp;Esse post ainda n√£o foi finalizado
                </div>
              )}
            </div>
          </blog-post-card>
        ))
      }
    </div>
  </section>
</BaseLayout>

<script>
  class BlogPostCard extends HTMLElement {
    constructor() {
      super();

      // when user clicks, redirect to post.slug
      this.addEventListener("click", () => {
        window.location.href = `/blog/${this.dataset.slug}/`;
      });
    }
  }

  customElements.define("blog-post-card", BlogPostCard);
</script>
