---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/index-sections/Hero.astro";
import IconsAndStartProject from "../components/index-sections/IndexIconsAndStartProjectSection.astro";
import Skills from "../components/index-sections/Skills.astro";
import IndexAboutSection from "../components/index-sections/IndexAboutSection.astro";
import IndexProjectsSection from "../components/index-sections/IndexProjectsSection.astro";
import IndexServicesSection from "../components/index-sections/IndexServicesSection.astro";
import IndexContactSection from "../components/index-sections/IndexContactSection.astro";
import IndexBlogSection from "../components/index-sections/IndexBlogSection.astro";
---

<BaseLayout>
  <main class="flex flex-col gap-10">
    <section>
      <Hero />
    </section>
    <section class="grid grid-cols-3">
      <IconsAndStartProject />
    </section>
    <section>
      <Skills />
    </section>
    <section id="about">
      <IndexAboutSection />
    </section>
    <section id="projects">
      <IndexProjectsSection />
    </section>
    <section id="services">
      <IndexServicesSection />
    </section>
    <section id="contact">
      <IndexContactSection />
    </section>
    <section id="blog">
      <IndexBlogSection />
    </section>
  </main>
</BaseLayout>
