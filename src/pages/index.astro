---
import BaseLayout from "../layouts/BaseLayout.astro";
import IndexHeroSection from "../components/index-sections/IndexHeroSection.astro";
import IndexIconsAndStartProjectSection from "../components/index-sections/IndexIconsAndStartProjectSection.astro";
import IndexSkillsSection from "../components/index-sections/IndexSkillsSection.astro";
import IndexAboutSection from "../components/index-sections/IndexAboutSection.astro";
import IndexProjectsSection from "../components/index-sections/IndexProjectsSection.astro";
import IndexServicesSection from "../components/index-sections/IndexServicesSection.astro";
import IndexContactSection from "../components/index-sections/IndexContactSection.astro";
import IndexBlogSection from "../components/index-sections/IndexBlogSection.astro";
---

<BaseLayout>
  <main class="flex flex-col gap-10">
    <section>
      <IndexHeroSection />
    </section>
    <section class="grid grid-cols-3">
      <IndexIconsAndStartProjectSection />
    </section>
    <section>
      <IndexSkillsSection />
    </section>
    <section id="about">
      <IndexAboutSection />
    </section>
    <section id="projects">
      <IndexProjectsSection />
    </section>
    <section id="services">
      <IndexServicesSection />
    </section>
    <section id="contact">
      <IndexContactSection />
    </section>
    <section id="blog">
      <IndexBlogSection />
    </section>
  </main>
</BaseLayout>
