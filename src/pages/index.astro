<style>
  #bg {
    position: absolute;
    right: 0;
    width: 100vw;
    height: 100vh;
    filter: blur(10px);

    background-image: url("../components/index-sections/svgs/hero-crazy-lines.svg");
    background-blend-mode: screen;
    background-repeat: no-repeat;
    background-size: contain;
    background-position: right;
  }
</style>
