---
import clsx from "clsx";

const { outline = false, shadow = true } = Astro.props;
---

<button
  class={clsx(
    "font-bold px-10 py-2 rounded-[10px]",
    outline
      ? "btn-outline border-2 border-black"
      : "bg-[#160033] text-white hover:bg-opacity-60",
    shadow ? "my-shadow" : ""
  )}><slot /></button
>
