---
import { LINK_LIGHT_COLOR, LINK_DARK_COLOR } from "../libs/constants";

const { tags } = Astro.props;
---

<div
  class={`flex flex-wrap gap-2 justify-center text-sm ${LINK_LIGHT_COLOR} ${LINK_DARK_COLOR} align-middle`}
>
  Tags: {
    tags.map((tag) => (
      <a class={`${LINK_LIGHT_COLOR} ${LINK_DARK_COLOR}`} href={`/tags/${tag}`}>
        {tag}
      </a>
    ))
  }
</div>
