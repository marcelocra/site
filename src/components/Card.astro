---
const {
  imageUrl = "https://img.daisyui.com/images/stock/photo-1606107557195-0e29a4b5b4aa.jpg",
  imageAlt = "A beautiful image",
  title,
  text,
  tech,
  buttonText = null,
} = Astro.props;
---

<div class="card min-w-96 w-96 bg-[var(--bg-bege)] shadow-md rounded-lg">
  <figure class="px-8 pt-8">
    <!-- @ts-ignore -->
    <img src={imageUrl} alt={imageAlt} class="rounded-lg" />
  </figure>
  <div class="card-body pt-3 flex flex-col gap-3">
    <h2 class="card-title">{title}</h2>
    <p class="text-sm">{text}</p>
    <br />
    {
      tech && (
        <p class="text-sm">
          <strong>Technologies: </strong>
          {tech}
        </p>
      )
    }
    {
      buttonText && (
        <div class="card-actions">
          <button class="text-blue-500 font-bold">{buttonText}</button>
        </div>
      )
    }
  </div>
</div>
