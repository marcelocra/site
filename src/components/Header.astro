---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import SocialLinks from "./SocialLinks.astro";
import { t } from "../lib/i18n/t";
---

<header>
  <nav
    class="flex flex-row items-center justify-between max-w-[1440px] mx-auto"
  >
    <a href="/">{SITE_TITLE}</a>
    <div>
      <HeaderLink href="/">{t("home")}</HeaderLink>
      <HeaderLink href="/blog">{t("blog")}</HeaderLink>
      <HeaderLink href="/about">{t("about")}</HeaderLink>
    </div>
    <div class="flex flex-row-reverse gap-3 px-5">
      <SocialLinks />
    </div>
  </nav>
</header>

<style>
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  header {
    background-color: var(--default-bg-color);
    color: var(--default-text-color);
  }
  header a {
    padding: 1em 0.5em;
    color: var(--default-text-color);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  header a.active {
    text-decoration: none;
    border-bottom-color: #090909;
  }
  header a:hover {
    color: #f5f5f5;
  }
</style>
