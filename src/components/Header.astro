---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import SocialLinks from "./SocialLinks.astro";
import LightDarkMode from "./LightDarkMode.astro";
import { prepareInternalUrl } from "../lib/i18n/prepare-internal-url";
import { t } from "../lib/i18n/t";
---

<header>
  <nav class="bg-[#e9e9e9] dark:bg-slate-600 dark:text-white">
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div>
      <HeaderLink href={prepareInternalUrl("/")}>{t("home")}</HeaderLink>
      <HeaderLink href={prepareInternalUrl("/blog")}>{t("blog")}</HeaderLink>
      <HeaderLink href={prepareInternalUrl("/about")}>{t("about")}</HeaderLink>
    </div>
    <div class="social-links">
      <SocialLinks />
    </div>
    <div class="flex flex-row items-center">
      <select class="select select-bordered w-full max-w-xs">
        <option selected value="pt-br">PortuguÃªs</option>
        <option value="en">English</option>
      </select>
      <div class="p-3">
        <LightDarkMode />
      </div>
    </div>
  </nav>
</header>

<script>
  import { setLocale } from "../lib/i18n/t";

  document.querySelector("select")?.addEventListener("change", (e) => {
    const lang = e.target?.value;
    if (!lang) return;

    setLocale(lang);
  });
</script>

<style>
  header {
    margin: 0;
    /* padding: 0 1em; */
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links {
    display: flex;
    gap: 1em;
    flex-direction: row-reverse;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
