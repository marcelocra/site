---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import SocialLinks from "./SocialLinks.astro";
import LightDarkMode from "./LightDarkMode.astro";
import { defaultLocale } from "../consts";
import { prepareInternalUrl } from "../lib/i18n/prepare-internal-url";
import { t } from "../lib/i18n/t";

const locale = Astro.currentLocale === defaultLocale ? "" : Astro.currentLocale;
---

<header>
  <nav class="bg-[#e9e9e9] dark:bg-slate-600 dark:text-white">
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div>
      <HeaderLink href={prepareInternalUrl(Astro.currentLocale, "/")}
        >{t("home")}</HeaderLink
      >
      <HeaderLink href={prepareInternalUrl(Astro.currentLocale, "/blog")}
        >{t("blog")}</HeaderLink
      >
      <HeaderLink href={prepareInternalUrl(Astro.currentLocale, "/about")}
        >{t("about")}</HeaderLink
      >

      <HeaderLink href={`${locale}/`}>Home</HeaderLink>
      <HeaderLink href={`${locale}/blog`}>Blog</HeaderLink>
      <HeaderLink href={`${locale}/about`}>Sobre</HeaderLink>
    </div>
    <div class="social-links">
      <SocialLinks />
    </div>
    <LightDarkMode />
  </nav>
</header>

<style>
  header {
    margin: 0;
    /* padding: 0 1em; */
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links {
    display: flex;
    gap: 1em;
    flex-direction: row-reverse;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
