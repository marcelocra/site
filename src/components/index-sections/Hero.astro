---
import { t } from "../../lib/i18n/t";
import SvgHeroCrazyLines from "./svgs/SvgHeroCrazyLines.astro";
---

<div class="grid grid-cols-2 pt-28">
  <div>
    <div class="font-bold text-6xl mb-5 my-gradient">
      {t("heroHeadline")}
    </div>
    <div class="text-lg">{t("heroSubtitle")}</div>
  </div>
  <div>
    <div class="absolute top-[75px] left-[40%] filter blur-[60px]">
      <SvgHeroCrazyLines />
    </div>
    <div
      class="absolute opacity-50 top-[575px] left-[20%] filter blur-[60px] transform translate-x-0 translate-y-[745px] rotate-[86deg] scale-x-[4] -scale-y-1"
    >
      <SvgHeroCrazyLines />
    </div>
  </div>
</div>

<div class="hidden">
