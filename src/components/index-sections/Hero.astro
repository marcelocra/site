      <div class="font-bold text-6xl mb-5 my-gradient">
        {t("heroHeadline")}
      </div>
      <div class="text-lg">{t("heroSubtitle")}</div>
    </hero-left-side>
    <hero-right-side>
      <template>
        <style>
          svg {
            position: absolute;
            top: 75px;
            filter: blur(60px);
            left: 40%;
            transform: rotate(95deg) scale(1, -1);
          }
          svg + svg {
            position: absolute;
            transform: translate(0px, 745px) rotate(124deg) scale(4, -1);
          }
          #background-image {
            width: 100%;
            overflow: hidden;
