---
import SocialLinks from "../SocialLinks.astro";
import Button from "../Button.astro";
import DownloadLatestCV from "../DownloadLatestCV.astro";
---

<div
  class="grid grid-cols-1 sm:grid-cols-6 gap-3 items-center justify-between w-full"
>
  <div class="flex flex-row gap-3 col-span-1 justify-center sm:justify-normal">
    <SocialLinks />
  </div>
  <div
    class="col-span-1 sm:col-span-3 flex flex-row justify-around sm:justify-normal sm:gap-3"
  >
    <a href="/#contact">
      <Button outline shadow={false}>Start Project</Button>
    </a>
    <DownloadLatestCV
      ><Button outline shadow={false}>Download CV</Button></DownloadLatestCV
    >
  </div>
</div>
