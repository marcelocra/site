---
import clsx from "clsx";

const { title, href, rows = 1 } = Astro.props;
---

<div class="flex justify-between items-center">
  <h2 class="text-4xl font-bold m-6">{title}</h2>
  <a href={href}>see all</a>
</div>

<div
  class={clsx(
    "grid grid-flow-col gap-3 justify-between w-full overflow-x-scroll [&::-webkit-scrollbar]:hidden p-3",
    rows === 1 && "grid-rows-1",
    rows === 2 && "grid-rows-2"
  )}
>
  <slot />
</div>
