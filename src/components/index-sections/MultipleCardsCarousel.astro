---
import clsx from "clsx";

const { title, href, rows = 1, id } = Astro.props;
---

<div class="flex justify-between items-center" {id}>
  <h2 class="text-4xl font-bold m-6 mt-0">{title}</h2>
  {
    href && (
      <a class="text-nowrap mr-6" href={href}>
        see all
      </a>
    )
  }
</div>

<div
  class={clsx(
    "grid grid-flow-col gap-3 justify-between w-full overflow-x-scroll [&::-webkit-scrollbar]:hidden pb-3 sm:p-3",
    rows === 1 && "grid-rows-1",
    rows === 2 && "grid-rows-2"
  )}
>
  <slot />
</div>
