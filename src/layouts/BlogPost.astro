---
import "../pages/blog/style.css";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { lang } from "../lib/constants";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
  };
}

const {
  content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;

function stringDateToDate(date?: string) {
  return new Date(Date.parse(date ?? "")).toLocaleDateString(lang);
}

const pubDateAsDate = stringDateToDate(pubDate);
const updatedDateAsDate = stringDateToDate(updatedDate);
---

<html lang={lang}>
  <head>
    <BaseHead title={title} description={description} />
    <style>
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }
    </style>
  </head>

  <body class="grid grid-cols-1 gap-3 justify-center mx-3 md:w-1/2 md:m-auto">
    <Header />
    <main>
      <article>
        {heroImage && <img width={720} height={360} src={heroImage} alt="" />}
        <h1 class="text-3xl">{title}</h1>
        {
          pubDateAsDate && (
            <span>
              Publicado: <time>{pubDateAsDate}</time>{" "}
              {updatedDateAsDate && (
                <span>
                  <i>
                    (Atualizado: <time>{updatedDateAsDate}</time>)
                  </i>
                </span>
              )}
            </span>
          )
        }
        <hr />
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
