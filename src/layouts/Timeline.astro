---
const { year, name, logo, position } = Astro.props;
---

<div class="flex flex-col gap-3">
  <div class="">
    <img src={logo} alt={name} class="w-16 h-16" />
  </div>
  <div class="flex flex-row items-center gap-3">
    {
      position % 2 === 0 ? (
        <div class="text-2xl font-semibold">{name}</div>
      ) : null
    }
    <div class="text-4xl font-medium">{year}</div>
    {
      position % 2 === 1 ? (
        <div class="text-2xl font-semibold">{name}</div>
      ) : null
    }
  </div>
  <div class="mt-10 text-base font-medium text-neutral-800">
    <slot />
  </div>
</div>
