---
import { SITE_TITLE } from "../config";
import { Avatar } from "../components/Avatar";
import HeaderLink from "../components/HeaderLink.astro";

import "../styles/_constants.scss";

const {
  title = SITE_TITLE,
  description = "Um site sobre produtividade e programação!",
  image = "/placeholder-social.jpg",
} = Astro.props;

const today = new Date();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Google Tag Manager -->
    <script type="text/javascript">
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-P2NDXVD");
    </script>
    <!-- End Google Tag Manager -->

    <!-- Global Metadata -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;800&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;800&display=swap"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;800&display=swap"
      />
    </noscript>

    <style>
      /*
        The CSS in this style tag is based off of Bear Blog's default CSS.
        https://github.com/HermanMartinus/bearblog/blob/297026a877bc2ab2b3bdfbd6b9f7961c350917dd/templates/styles/blog/default.css
        License MIT: https://github.com/HermanMartinus/bearblog/blob/master/LICENSE.md
      */
      body {
        font-family: Inter, ui-sans-serif, system-ui, -apple-system,
          BlinkMacSystemFont, Segoe UI, Roboto, Helvetica Neue, Arial, Noto Sans,
          sans-serif, "Apple Color Emoji", "Segoe UI Emoji", Segoe UI Symbol,
          "Noto Color Emoji";
        background-color: rgba(31, 41, 55, 1);
        color: var(--my-gray);
      }
    </style>
  </head>
  <body class="grid grid-cols-1 gap-3">
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-P2NDXVD"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->

    <header class="grid grid-cols-1 gap-3 justify-items-center">
      <Avatar class="w-24 h-24 md:w-32 md:h-32 rounded-full" />
      <h2 class="m-0">
        {SITE_TITLE}
      </h2>
      <nav class="grid grid-flow-col gap-3">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">Sobre</HeaderLink>
      </nav>
    </header>
    <main class="w-full md:w-1/2 2xl:w-1/3 md:m-auto">
      <slot name="main" />
    </main>
    <footer class="mb-3 text-center grid grid-flow-row gap-2">
      <div>
        &copy; {today.getFullYear()} Marcelo Almeida. All rights reserved.
      </div>
      <div class="grid grid-flow-col justify-center gap-3">
        <a
          class="text-[color:var(--primary-color)] no-underline"
          href="https://github.com/marcelocra"
          target="_blank">GitHub</a
        >
        <a
          class="text-[color:var(--primary-color)] no-underline"
          rel="me"
          href="https://mastodon.social/@marcelocra"
          target="_blank">Mastodon</a
        >
      </div>
    </footer>
  </body>
</html>
